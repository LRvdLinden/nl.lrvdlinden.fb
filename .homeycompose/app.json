  "api": {
    "getLogs": {
      "method": "GET",
      "path": "/getlogs"
    },
    "deleteLogs": {
      "method": "GET",
      "path": "/deletelogs"
    }
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Send a message"
        },
        "titleFormatted": {
          "en": "Send message [[msg]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=fb"
          },
          {
            "name": "msg",
            "type": "text",
            "placeholder": {
              "en": "Text"
            }
          }
        ],
        "id": "send"
      },
      {
        "title": {
          "en": "Send image"
        },
        "droptoken": "image",
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=fb"
          }
        ],
        "id": "send_image"
      }
    ]
  },
 "drivers": [
    {
      "class": "other",
      "capabilities": [
        "last_sent"
      ],
      "energy": {
        "usageConstant": 0
      },
      "images": {
        "small": "/drivers/fb/assets/images/small.jpg",
        "large": "/drivers/fb/assets/images/large.jpg"
      },
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "passwordLabel": {
              "en": "Apikey (for Telegram only required when sending to Groups)"
            },
            "passwordPlaceholder": {
              "en": "See instructions at callmebot.com"
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Receiver information"
          },
          "children": [
            {
              "id": "number",
              "type": "label",
              "label": {
                "en": "Number"
              },
              "value": "",
              "hint": "The number of the phone to receive messages (Signal and WhatsApp), or the username (Telegram and Facebook Messenger)"
            },
            {
              "id": "apikey",
              "type": "password",
              "label": {
                "en": "Api key"
              },
              "value": "",
              "hint": "See app settings or callmebot.com for instructions how to get an api key. Telegram only needs an api key when sending to Groups."
            }
          ]
        }
      ],
      "name": {
        "en": "FB Messenger"
