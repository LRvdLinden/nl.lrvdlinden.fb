{
    "title": {
      "en": "Send voice message"
    },
    "titleFormatted": {
      "en": "Send voice message [[msg]] in [[language]] [[voice]]"
      },
  "platforms": [
    "local",
    "cloud"
  ],
    "args": [
      {
        "type": "device",
        "name": "device",
        "filter": "driver_id=telegram"
      },
      {
        "name": "msg",
        "type": "text",
        "placeholder": {
          "en": "Text"
        }
      },
      {
        "name": "language",
        "type": "dropdown",
        "title": { 
          "en": "Language"
        },
        "values": [
          { "id": "en-GB", "label": { "en": "EN" } },
          { "id": "nl-NL", "label": { "en": "NL" } },
          { "id": "de-DE", "label": { "en": "DE" } },
          { "id": "it-IT", "label": { "en": "IT" } },
          { "id": "fr-FR", "label": { "en": "FR" } },
          { "id": "sv-SE", "label": { "en": "SV" } },
          { "id": "nb-NO", "label": { "en": "NB" } },
          { "id": "da-DK", "label": { "en": "DA" } },
          { "id": "es-ES", "label": { "en": "ES" } },
          { "id": "pl-PL", "label": { "en": "PL" } },
          { "id": "ru-RU", "label": { "en": "RU" } }
        ]
      },
      {
        "name": "voice",
        "type": "dropdown",
        "title": { 
          "en": "Voice"
        },
        "values": [
          { "id": "A", "label": { "en": "Female" } },
          { "id": "B", "label": { "en": "Male" } }
        ]
      }
    ]
}
